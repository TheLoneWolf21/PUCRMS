<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feedbackactivity">
    <RelativeLayout
        android:id="@+id/RtoolBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#757575">
        <ImageView
            android:id="@+id/bakikon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back60"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/backripple"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/bakikon"
            android:text="Feedback"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="#fff"/>
        <ImageView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/send60"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/backripple"
            android:clickable="true"
            android:focusable="true"
            android:tooltipText="Send"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/centerTek"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/centerTek"
        android:layout_below="@id/RtoolBox">
    <EditText
        android:id="@+id/feedb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="top"
        android:background="@drawable/fourthactivitytextboxdesign"
        android:hint="Let us know how you feel about this app and improvements we have to make"/>
    </RelativeLayout>
</RelativeLayout>