<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="3dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview">
    <TextView
        android:id="@+id/current_subject_and_time"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="10:30-12:30"
        android:textColor="#000"
        android:background="@drawable/fourthactivitytextboxdesign"/>
       <TextView
        android:id="@+id/overlapped_day"
        android:layout_width="100dp"
        android:gravity="center"
        android:text="Sunday"
           android:textColor="#000"
           android:background="@drawable/fourthactivitytextboxdesign"
        android:layout_toEndOf="@id/current_subject_and_time" android:layout_height="match_parent" />
        <TextView
            android:id="@+id/overlapped_subject_and_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/current_subject_and_time"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/current_subject_and_time"

            android:layout_toEndOf="@id/overlapped_day"
            android:gravity="center"
            android:text="SEISD Lab at 607"
            android:textColor="#000"
            android:background="@drawable/fourthactivitytextboxdesign"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>